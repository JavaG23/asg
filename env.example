# Database
# For development (SQLite)
DATABASE_URL="file:./dev.db"
# For production (PostgreSQL)
# DATABASE_URL="postgresql://user:password@host:5432/fooddelivery?schema=public"

# Google Maps API
# Get your API key from: https://console.cloud.google.com/
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your_google_maps_api_key_here"
GOOGLE_MAPS_SERVER_API_KEY="your_server_side_maps_key_here"

# Distribution Center Address
# Full address where drivers return after completing their routes
NEXT_PUBLIC_DISTRIBUTION_CENTER_ADDRESS="24757 Arcola Mills Dr, Dulles, VA 20166"

# Bloomerang Integration
# Contact Bloomerang support for API access
BLOOMERANG_API_KEY="your_bloomerang_api_key_here"
BLOOMERANG_API_URL="https://api.bloomerang.co/v2"

# Bloomerang OAuth (for SSO)
BLOOMERANG_CLIENT_ID="your_bloomerang_client_id_here"
BLOOMERANG_CLIENT_SECRET="your_bloomerang_client_secret_here"
BLOOMERANG_OAUTH_URL="https://api.bloomerang.co/oauth"

